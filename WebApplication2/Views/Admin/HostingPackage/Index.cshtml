@{
    // @model IEnumerable<WebApplication2.Models.HostingPackage>
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Hosting Packages</h1>
            <p class="mb-4">
                Manage your hosting packages here. You can view, add, edit, and delete hosting packages.
            </p>
            <div style="display:flex;justify-content:end;">
                <a asp-controller="Hosting" asp-action="Create" class="btn btn-warning mb-3">Add Hosting Package</a>
            </div>
            
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hosting Packages</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Storage (GB)</th>
                                    <th>Bandwidth (GB)</th>
                                    <th>Price</th>
                                    <th>Company</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hosting in Model)
                                {
                                    <tr>
                                        <td>@hosting.Name</td>
                                        <td>@hosting.StorageGB GB</td>
                                        <td>@hosting.BandwidthGB GB</td>
                                        <td>@hosting.Price.ToString("C")</td>
                                        <td>@hosting.Company?.Name</td>
                                        <td>
                                            @if (hosting.Status == "Active")
                                            {
                                                <span style="color: green;">&#9679;</span> <!-- Green circle -->
                                                <span style="color: green;">Active</span>
                                            }
                                            else
                                            {
                                                <span style="color: red;">&#9679;</span> <!-- Red circle -->
                                                <span style="color: red;">@hosting.Status</span>
                                            }
                                        </td>
                                        <td>@hosting.CreatedAt.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <a asp-controller="Hosting" asp-action="Details" asp-route-id="@hosting.Id" class="btn btn-sm btn-info">View</a>
                                            <a asp-controller="Hosting" asp-action="Edit" asp-route-id="@hosting.Id" class="btn btn-sm btn-primary">Edit</a>

                                            <form asp-controller="HostingPackage" asp-action="Delete" asp-route-id="@hosting.Id" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this hosting package?');">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2020</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>