@model WebApplication2.Models.LoginViewModel

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100" style="padding-top: 200px;">
            <div class="card-wrapper">
                <div class="card fat" style="width: 500px; max-width: 90vw;">
                    <div class="card-body" style="padding: 3rem;">
                        <h4 class="card-title">Login</h4>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }

                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "my-login-validation" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, "E-Mail Address")
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required", autofocus = "autofocus" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "invalid-feedback" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "" })
                                <a href="forgot.html" class="float-right">Forgot Password?</a>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "invalid-feedback" })
                            </div>

                            <div class="form-group m-0">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>